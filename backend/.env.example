# Backend Configuration Example
# Copy this file to .env and adjust values for your environment

# FastAPI Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Settings (for frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO

# Session Management
MAX_SESSIONS=100
SESSION_TIMEOUT_MINUTES=60

# Authentication
# Set to "true" to require login, "false" for dev mode (no login)
AUTH_ENABLED=false
AUTH_SECRET=change-this-in-production-use-random-string

# KALAP V2 Settings
DEFAULT_MODE=simple
SMASH_FORMULA_ENABLED=True
PROSPECT_MODE_ENABLED=True

# Response Generation
MIN_CAPTURE_SCORE=0.6
MAX_PROBES_PER_CAPTURE=2
COMMITMENT_TEMPERATURE_INCREMENT=0.1

# Feature Flags
VOICE_ENABLED=True
ANALYTICS_ENABLED=True
